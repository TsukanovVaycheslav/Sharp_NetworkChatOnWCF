<Window x:Class="СhatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СhatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid Loaded="Grid_Loaded">
     

        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="34" Margin="255,27,0,0" TextWrapping="Wrap" Text="Имя пользователя:" VerticalAlignment="Top" Width="529" FontSize="22px" Grid.ColumnSpan="3"/>
        <Button x:Name="bConnDicon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="35,27,0,0" VerticalAlignment="Top" Width="145" Height="34" FontSize="22px"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="238" Margin="10,80,0,0" VerticalAlignment="Top" Width="774" Grid.ColumnSpan="3" FontSize="18px"/>
        <TextBox x:Name="lbMessage" HorizontalAlignment="Left" Height="60" Margin="11,337,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="773" Grid.ColumnSpan="3" KeyDown="lbMessage_KeyDown" FontSize="22px"/>

    </Grid>
</Window>
